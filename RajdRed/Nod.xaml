<UserControl x:Class="RajdRed.Nod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="10" Width="10">
    <Grid Name="OuterGrid" MouseEnter="OuterGrid_MouseEnter" MouseDown="OuterGrid_MouseDown" Background="Transparent" MouseLeave="OuterGrid_MouseLeave">
        <Ellipse Name="OuterEllipse" Visibility="Hidden" Fill="Red" Opacity="0.5" ></Ellipse>
    </Grid>
</UserControl>
