<Window x:Class="RajdRed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="720" Width="1024"
        Name="RajdRedMainWindow"
        MinHeight="720" MinWidth="1024" WindowStyle="None" AllowsTransparency="False">
    <Canvas Name="theCanvas" Background="#EAEDF2" Grid.Row="0">
        <Grid Height="100" Background="#3b444f" Grid.Row="0"  Width="{Binding ActualWidth, ElementName=theCanvas}">
            <Grid.RowDefinitions>
                <RowDefinition Height="22*" />
                <RowDefinition Height="78*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#222931">
                <!-- Detta är ÖVRE delen av menyn -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="956*" />
                    <ColumnDefinition Width="68*" />
                </Grid.ColumnDefinitions>
                <Rectangle Fill="#222931" MouseDown="WindowDragAndMove" Grid.Column="0"></Rectangle>
                <Grid Grid.Column="1" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22" />
                        <ColumnDefinition Width="22" />
                        <ColumnDefinition Width="22" />
                    </Grid.ColumnDefinitions>
                    <!-- Dessa knappar behöver designas -->
                    <Ellipse Margin="5" Fill="#FFD1FF00" Grid.Column="0"></Ellipse>
                    <Label MouseLeftButtonUp="Ellipse_MinimizeWindow" Margin="3.65, -3.3, 0, 0" FontSize="12" Grid.Column="0">-</Label>
                    <Ellipse Margin="5" Fill="#FF00FF3D" Grid.Column="1"></Ellipse>
                    <Label MouseLeftButtonUp="Ellipse_MaximizeWindow" Margin="2.65, 0, 0, 0" FontSize="10" Grid.Column="1">^</Label>
                    <Ellipse Margin="5" Fill="#FFFF3C00" Grid.Column="2"></Ellipse>
                    <Label MouseLeftButtonUp="Ellipse_CloseWindow" Margin="3.6, 0.6, 0, 0" FontSize="8" Grid.Column="2">X</Label>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Background="Transparent">
                <!-- Detta är UNDRE delen av menyn -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="435*" />
                    <ColumnDefinition Width="130*"/>
                    <ColumnDefinition Width="450*" />
                </Grid.ColumnDefinitions>
                <Button Background="Transparent" Foreground="White" PreviewMouseDown="Button_PreviewMouseDown" Grid.Column="1">Add class</Button>
            </Grid>
        </Grid>
        <!-- Detta är Canvasen där klasserna skall ligga -->

    </Canvas>
</Window>