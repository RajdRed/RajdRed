<Window x:Class="rajdred.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="720" Width="1024"
        MinHeight="720" MinWidth="1024">

    <Canvas Name="theCanvas" Background="#EAEDF2" Grid.Row="0">
        <Grid Height="72" Background="#3b444f" Grid.Row="0"  Width="{Binding ActualWidth, ElementName=theCanvas}">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*" />
                <RowDefinition Height="75*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#222931">
                <!-- Detta är ÖVRE delen av menyn -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="94*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <!-- Dessa knappar behöver designas -->
                    <Button Grid.Column="0">-</Button>
                    <Button Grid.Column="1">^</Button>
                    <Button Grid.Column="2">x</Button>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Background="Transparent">
                <!-- Detta är UNDRE delen av menyn -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="435*" />
                    <ColumnDefinition Width="130*"/>
                    <ColumnDefinition Width="450*" />
                </Grid.ColumnDefinitions>
                <Button Background="Transparent" Foreground="White" PreviewMouseDown="Button_PreviewMouseDown" Grid.Column="1">Add class</Button>
            </Grid>
        </Grid>
        <!-- Detta är Canvasen där klasserna skall ligga -->

    </Canvas>
</Window>