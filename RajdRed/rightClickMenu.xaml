<UserControl x:Class="RajdRed.RightClickMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="70.4" Width="207.6">
    <Border CornerRadius="0, 0, 6, 0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="3" Opacity="0.6" Color="#FF696363" ShadowDepth="1"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"></RowDefinition>
                <RowDefinition Height="50*"></RowDefinition>

            </Grid.RowDefinitions>

            <Button Background="White" Grid.Row="0" FontSize="11" HorizontalContentAlignment="Left">
                <TextBlock Text="Draw Line" TextAlignment="Left" Width="209" Padding="20,10,0,0" Height="35">

                </TextBlock>
            </Button>
            <Button Background="#f9f9f9" Grid.Row="1" FontSize="11" HorizontalContentAlignment="Left">
                <TextBlock Text="Multiplicity" TextAlignment="Left" Width="207" Padding="20, 10, 0, 0" Height="35">

                </TextBlock>
            </Button>
        </Grid>
    </Border>
</UserControl>
